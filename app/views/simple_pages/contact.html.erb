<div class="contact-body" >
  <h1 class="contact-heading">Get in touch<span class="red-dot">.</span></h1>
  <hr>
  <div class="row contact-info">
    <div class="col-md-6 col-sm-12">
      <h3>DaShop GmbH</h3>
      <p>Max Mustermann</p>
      <p>0000 00000000</p>
      <p>Beispielsta√üe 23</p>
      <p>Munich</p>
    </div>
    <div class="col-md-6 col-sm-12">
      <h3>Opening hours</h3>
      <p>Mo-Fr 10:00 - 19:00 </p>
      <p>Sa & So 9:00 - 13:00 </p>
    </div>
  </div>
  <hr>
  <h1 class="contact-heading">Contact Us</h1>

  <%= flash[:notice] %>

  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true, class: "contact-form") do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
      </div>
    <%= form.submit "Send", class: "form_label" %>
  <% end %>
</div>
